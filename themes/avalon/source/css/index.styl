// Global Theme Color
$theme-color = convert(hexo-config("theme_color.main")) || #000000
$theme-style-color = convert(hexo-config("theme_color.style_color")) || #fff100
$theme-link-color = convert(hexo-config("theme_color.link_color")) || #7cadda
$theme-background-color = convert(hexo-config("theme_color.background_color")) || #fefefe
$hr-color = convert(hexo-config("theme_color.hr_color")) || #e9e9e9
$mask-color = convert(hexo-config("theme_color.mask_color")) || rgba(0, 0, 0, 0.7)
$mask-font-color = #ffffff
$tag-item-color = #000000
$selection-background-color = convert(hexo-config("theme_color.selection_background_color")) || #10141b
$selection-font-color = convert(hexo-config("theme_color.selection_font_color")) || #ffffff
$blockquote-color = convert(hexo-config("theme_color.blockquote_color")) || #5e5e5e
$text-highlight-color = convert(hexo-config("theme_color.text_highlight_color")) || rgba(255, 241, 0, 0.7)

$logo-normal = convert(hexo-config("logo_normal")) || "/avalon-logo.svg"

// Global Variables
// font style
// font-size
$font-size = 14px
$font-color = #000000
$header-hight = 40px

@import "_font/*"
$font-family = 'Frank Ruhl Libre', 'Noto Serif SC', '-apple-system', BlinkMacSystemFont, '游ゴシック' , '游ゴシック体', "ヒラギノ角ゴ Pro W3", "メイリオ", "ＭＳ Ｐゴシック", 'Helvetica Neue', 'Segoe UI', 'PingFang SC', 'Microsoft YaHei', Helvetica, Arial, sans-serif
$font-bold = 'Frank Ruhl Libre', 'Noto Serif SC', '-apple-system', BlinkMacSystemFont, 'Open Sans', '游ゴシック' , '游ゴシック体', "ヒラギノ角ゴ Pro W3", "メイリオ", "ＭＳ Ｐゴシック", 'Helvetica Neue', 'Segoe UI', 'PingFang SC', 'Microsoft YaHei', Helvetica, Arial, sans-serif
font-gb-bold = @block {
    font-weight: 700;
}
font-latin-medium = @block {
    font-style: normal;
    font-weight: 500;
}
font-latin-Italic = @block {
    font-style: italic;
    font-weight: 400;
}
font-latin-Medium-Italic = @block {
    font-style: italic;
    font-weight: 500;
}
font-latin-Blod = @block {
    font-style: normal;
    font-weight: 700;
}
font-latin-Blod-Italic = @block {
    font-style: italic;
    font-weight: 700;
}
font-latin-ExtraBold = @block {
    font-style: normal;
    font-weight: 800;
}
font-latin-ExtraBold-Italic = @block {
    font-style: italic;
    font-weight: 800;
}
font-latin-Light = @block {
    font-style: normal;
    font-weight: 300;
}
font-latin-Light-Italic = @block {
    font-style: italic;
    font-weight: 300;
}


$code-font = 'Source Code Pro', monospace, Monaco, Consolas, Menlo, "PingFang SC", 'Helvetica Neue For Number'
$code-background = rgba(27, 31, 35, 0.05)
$img-undertext = convert(hexo-config("theme_color.blockquote_color")) || #5e5e5e
$line-height-code-block = 20px
$text-line-height = 1.7
$code-line-height = 1.5

//header
$header-background-color = #fefefe
$header-shadow-color = #c3c0c0

//article
$index-article-img-height = 360px
$archive-article-img-height = 50%
$index-article-contain-width = 74%
$page-letter-spacing = 1px

//style
$block-shadow = 0px 0px rgba(0,0,0,0.05) inset, 2px 3px 10px 0px rgba(0,0,0,0.14)
$block-shadow-active = 0px 0px rgba(0,0,0,0.05) inset, 6px 8px 24px 0px rgba(0,0,0,0.1)

@import "_assets/normalize.min.css"
@import "_animation/*"
@import "_global/*"
@import "_layout/*"
@import "_includes/*"
@import "_mobile/*"
@import "_assets/iconfont.css"
@import "_highlight/highlight/styles/" + convert(hexo-config("Highlight.theme")) + ".css"
if hexo-config("slide_img.enable")
    @import "_assets/vegas.min.css"