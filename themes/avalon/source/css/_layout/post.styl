
#acticle-posts{
    width: 46%
    margin: 0 auto
    font-size: $font-size
}
.article-postimg{
    overflow hidden
}
#pagination{
    margin: 35px 0 45px 0 
    height: 100px
}
.post-page-content #pagination .material-icons{
    font-size: 24px
}

#pagination .material-icons{
    font-size: 18px
}
.pagination{
    padding: 0
}
.pag-num{
    width: 50%
    margin-top: -6px;
    text-align: center;
}
.next-post-page,.prev-post-page{
    width: 20%
}
.next-post-page{
    text-align: right
}
.prev-post-page{
    text-align: left 
}
.item-list-page-num{
    margin: 5px
    padding: 2px;
    width: 8%;
    background-color: $theme-color
    color: $theme-background-color
    display: inline-block;
    text-align: center;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}
.item-list-page-num:hover{
    background-color: $theme-style-color
    color: $theme-color
}
.item-list-page-num:active{
    background-color: $theme-style-color
    color: $theme-color
}
.item-list-page-num.active{
    background-color: $theme-style-color
    color: $theme-color
}
.post-page-top-img{
    overflow hidden
    height:100%
}
.post-page-top-img img{
    width: 100%;
    height: 500px;
    object-fit: cover;
}
#title-data{
    width: 40%
    margin: 0 auto
    text-align: center
    position: relative;
    background-color: $theme-background-color
    padding-bottom: 15px;
}
.post-page-date{
    width: 50%
    margin: 0 auto 
    text-align: center
}
.post-page-title{
    font-family: $font-bold
    {font-latin-medium}
    font-size: 1.8em;
    width: 90%;
    margin: 0 auto 10px auto;
    text-align: center;
}
.post-page-tags{
    font-size: 0.4rem;
    text-align: center;
    margin: 15px auto 10px auto;
    font-family: $font-bold
    {font-latin-medium}
    display: inline-block
}
.post-page-content{
    width: 56%;
    margin: 0 auto;
    padding: 5px 15px 15px 15px;
    letter-spacing: $page-letter-spacing
    line-height: $text-line-height
}
pre, code, tt {
    font-size: 14px;
    font-family: $code-font !important
}
code {
    overflow-x: auto;
    overflow-y: auto;
    word-break: keep-all;
    white-space: pre;
}
.img-undertext{
    color: $img-undertext
    font-size: 10px
    font-style: italic
    text-align: center;

}
.img-undertext-divi{
    width: 5px
    margin: 0 auto
    height: 1px
    background-color: $img-undertext
    margin-top: 5px;
}
.text-highlight{
    background-color: $text-highlight-color;
    padding: 2px 4px;
    color: $blockquote-color
    margin: 0 4px;
}
blockquote {
    position relative
    margin-top: 20px
    color: $blockquote-color
    font-style: italic;
}
blockquote::before {
    content: "\201C";
    margin-right: 0.25em;
    margin-top: 5px;
    color: $blockquote-color;
    font-size: 2em;
    line-height: 0.1em;
    position: absolute;
    left: -1em;
}
.post-page-content hr {
  height: 1px;
  border: 0;
  background: $hr-color;
  margin: 16px 0;
  clear: both;
}

/* for block of numbers */
.hljs-ln-numbers {
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    -khtml-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    text-align: center;
    color: #ccc;
    vertical-align: top;
    padding-right: 15px;

    /* your custom style here */
}

/* for block of code */
.hljs-ln-code {
    padding-left: 10px !important
}
.post-img-big {
    width: 50%    
}
.post-img-small:active, .post-img-big:active, .post-img-middle:active {
    transform: scale(2) 
}
.post-img-middle {
    width: 42%    
}
.post-img-small {
    width: 25%    
}